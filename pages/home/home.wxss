.phone_personal{
  width:100%;
  height:100px;
  line-height:100px;
  text-align: center;
}
  .phone_one{
  display: flex; 
  position: relative;
  justify-content: space-between;
  background-color:rgb(239, 239, 239);
  width:90%;
  height:100px;
  margin:0 auto;
  border-radius: 10px;
  border-bottom:2px solid rgb(255, 255, 255);
}
.person_box{
  position: relative;
  width: 100%;
}
.phone_select{
  margin-top:0;
  z-index: 100;
  position: absolute; 
}
.select_one{
  text-align: center;
  background-color:rgb(239, 239, 239);
  width:100%;
  height:100rpx;
  line-height:100rpx;
 
  border-bottom:2px solid rgb(255, 255, 255);
}
.personal_image{
  z-index: 100;
  position: absolute;
  right:2.5%;
  width: 34px;
  height: 20px;
  margin:40px 20px 40px 0;
  transition: all 0.4s ease; 
  -webkit-transition: all 0.4s ease;
}
.rotateRight{
  transform: rotate(180deg);
} 
.container{
display:flex;
flex-direction: row;
 padding: 12px 25px; 
}
